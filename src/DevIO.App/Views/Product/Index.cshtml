@model IEnumerable<DevIO.App.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>@ViewData["Title"]</h1>

<hr />
<p>
    <a class="btn btn-info" asp-action="Create">Novo Produto</a>
</p>

@await Component.InvokeAsync("GridView", new
{
    HeaderColumns = new string[] { "Imagem", "Nome", "Fornecedor", "Valor", "Ativo?" },
    DisplayColumns = new string[] { "Picture", "Name", "Provider.name", "Price", "Active" },
    ColumnType = new string[] { "img", "string", "string", "string", "bool" },
    Url = "Product/GetFilteredItems",
    ReadOnly = false,
    PageSize = 10,
    Controller = "Product",
    Exporting = false
})

@section Scripts{

    <script>
        $(document).ready(function () {
            initializeDataTable();
        });
    </script>

}